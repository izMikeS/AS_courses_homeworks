@model OnlineStore.WebPLL.Models.FullModels.CategoryFullViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Category details</h2>

<div>
    <div>
        <table class="table">
            <tr>
                <th>@Html.DisplayNameFor(m => Model.Category.ImgUrl)</th>
            </tr>
            <tr>
               <th><img class="img-ico" src="@Url.Content(Model.Category.ImgUrl ?? "n")" /></th> 
            </tr>  
            <tr>
                <th>@Html.DisplayNameFor(m => Model.Category.Name)</th>
            </tr>
            <tr>
                <td>@Html.DisplayFor(m => Model.Category.Name)</td>
            </tr>
        </table>
    </div>

    @if (Model.Products != null && Model.Products.Count != 0)
    {
        <h4>Products</h4>
        <table class="table">

            <tr>
                <th>@Html.DisplayNameFor(m => Model.Products.FirstOrDefault().Name)</th>
                <th>@Html.DisplayNameFor(m => Model.Products.FirstOrDefault().ImgUrl)</th>
                <th></th>
            </tr>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>@Html.DisplayFor(m => item.Name)</td>
                    <td><img class="img-ico" src="@Html.DisplayFor(m => item.ImgUrl)" /></td>
                    <td>@Html.ActionLink("Details", "Details", "Product", new { id = item.Id }, null)</td>
                </tr>
            }
        </table>
    }

    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
        @Html.ActionLink("Back to List", "List")
    </p>
